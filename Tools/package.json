  "main": "index.js",
  "scripts": {
    "run:kill-reset": "node kill-reset-demon.js",
    "run:kill": "node kill-demon.js"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Drakolis/useful-tools.git"
