  "dependencies": {
    "ps-node": "^0.1.6"
  },
  "devDependencies": {
    "prettier": "^3.0.3",
    "xo": "^0.56.0"
  },
  "prettier": {
    "trailingComma": "es5",
    "tabWidth": 2,
    "useTabs": false,
    "semi": true,
    "singleQuote": true,
    "endOfLine": "lf",
    "bracketSpacing": true
  },
  "xo": {
    "prettier": true,
    "rules": {
      "import/extensions": 0,
      "n/file-extension-in-import": 0,
      "new-cap": 0,
      "unicorn/prefer-module": 0,
      "no-unused-vars": 2,
      "import/no-default-export": 2
    }
  }
